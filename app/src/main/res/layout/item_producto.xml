<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="125dp"
        android:layout_marginEnd="4dp">
    <ImageView
            android:layout_width="80dp"
            android:layout_height="0dp"
            android:src="@drawable/ic_load"
            android:id="@+id/cover_image"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="20dp"
            android:contentDescription="Anime cover image"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="20dp"
            android:layout_marginTop="20dp" app:srcCompat="@drawable/ic_load"/>
    <TextView
            android:layout_width="0dp"
            android:layout_height="41dp"
            android:id="@+id/text_title"
            android:textSize="15sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@+id/cover_image"
            android:layout_marginStart="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="30dp"
            app:autoSizeTextType="uniform"
            app:autoSizeMinTextSize="10sp"
            app:autoSizeMaxTextSize="15sp"
            app:autoSizeStepGranularity="2sp"
            android:text="@string/producto"/>
    <TextView
            android:text="@string/precio_default"
            android:layout_width="0dp"
            android:layout_height="16dp" android:id="@+id/text_price"
            android:textSize="12sp"
            app:layout_constraintTop_toBottomOf="@+id/text_title" android:layout_marginTop="7dp"
            app:layout_constraintStart_toEndOf="@+id/cover_image" android:layout_marginStart="76dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="20dp"
    />
    <TextView
            android:text="@string/precio"
            android:layout_width="0dp"
            android:layout_height="16dp" android:id="@+id/text_bot_label"
            android:textSize="12sp" app:layout_constraintStart_toEndOf="@+id/cover_image"
            android:layout_marginStart="20dp" app:layout_constraintTop_toBottomOf="@+id/text_title"
            android:layout_marginTop="7dp"
            android:layout_marginEnd="10dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>